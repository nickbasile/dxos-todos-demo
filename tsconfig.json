{
  "compilerOptions": {
    "esModuleInterop": true,
    "jsx": "react",
    "emitDeclarationOnly": false,
    "lib": [
      "DOM",
      "ESNext"
    ],
    "outDir": "dist",
    "skipLibCheck": true,
    "types": [
      "node"
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "vite.config.ts"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}